  <script>
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤ login ‡πÅ‡∏•‡πâ‡∏ß‡∏´‡∏£‡∏∑‡∏≠‡∏¢‡∏±‡∏á
    async function checkLoginStatus() {
      try {
        const response = await fetch('/auth/user', { credentials: 'include' });
        const data = await response.json();
        
        if (data.logged_in) {
          showLoggedInState(data.name, data.email);
        } else {
          showLoggedOutState();
        }
      } catch (error) {
        // ‡∏ñ‡πâ‡∏≤‡πÄ‡∏£‡∏µ‡∏¢‡∏Å API ‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ ‡∏•‡∏≠‡∏á‡∏î‡∏π URL params
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('logged_in') === 'true') {
          const name = urlParams.get('name') || 'User';
          showLoggedInState(name, '');
        } else {
          showLoggedOutState();
        }
      }
    }

    function showLoggedInState(name, email) {
      document.getElementById('userName').textContent = name;
      document.getElementById('userEmail').textContent = email || '‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏°‡∏î‡πâ‡∏≤‡∏ô‡∏•‡πà‡∏≤‡∏á‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏î‡∏∂‡∏á‡∏á‡∏≤‡∏ô‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì';
      document.getElementById('userAvatar').textContent = name.charAt(0).toUpperCase();
      document.getElementById('loginSection').style.display = 'none';
      document.getElementById('fetchBtn').style.display = 'flex';
      document.getElementById('logoutBtn').style.display = 'block';
      document.getElementById('resultContent').innerHTML = ``;
      
      // ‡πÄ‡∏Å‡πá‡∏ö‡∏ä‡∏∑‡πà‡∏≠‡πÑ‡∏ß‡πâ‡πÉ‡∏ä‡πâ
      window.currentUserName = name;
    }

    function showLoggedOutState() {
      document.getElementById('userName').textContent = '‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ Login';
      document.getElementById('userEmail').textContent = '‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏î‡∏π‡∏á‡∏≤‡∏ô‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì';
      document.getElementById('userAvatar').textContent = '?';
      document.getElementById('loginSection').style.display = 'block';
      document.getElementById('fetchBtn').style.display = 'none';
      document.getElementById('logoutBtn').style.display = 'none';
    }

    function logout() {
      window.location.href = '/auth/logout';
    }

    async function fetchMyTasks() {
      const btn = document.getElementById('fetchBtn');
      const resultContent = document.getElementById('resultContent');
      const timestamp = document.getElementById('timestamp');

      // Show loading
      btn.classList.add('loading');
      btn.disabled = true;
      resultContent.innerHTML = '<div class="placeholder"><div class="icon">‚è≥</div><p>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...</p></div>';

      try {
        // ‡πÉ‡∏ä‡πâ /api/my_tasks ‡∏ó‡∏µ‡πà‡πÉ‡∏ä‡πâ session (‡∏ñ‡πâ‡∏≤ session ‡πÑ‡∏°‡πà‡∏ó‡∏≥‡∏á‡∏≤‡∏ô fallback ‡πÑ‡∏õ demo)
        let response = await fetch('/api/my_tasks', { credentials: 'include' });
        let data = await response.json();

        // ‡∏ñ‡πâ‡∏≤ session ‡πÑ‡∏°‡πà‡∏ó‡∏≥‡∏á‡∏≤‡∏ô (401) ‡πÉ‡∏ä‡πâ demo ‡πÅ‡∏ó‡∏ô
        if (response.status === 401 && window.currentUserName) {
          response = await fetch('/api/my_tasks/demo', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ user_name: window.currentUserName })
          });
          data = await response.json();
        }

        if (data.error) {
          resultContent.innerHTML = `<div class="placeholder">
            <div class="icon">‚ùå</div>
            <p>${data.error}</p>
          </div>`;
        } else {
          // Format markdown to HTML
          let content = data.content
            .replace(/^### (.*)$/gm, '<h3>$1</h3>')
            .replace(/^## (.*)$/gm, '<h2>$1</h2>')
            .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
            .replace(/^---$/gm, '<hr style="border: 1px solid rgba(255,255,255,0.1); margin: 20px 0;">')
            .replace(/\n/g, '<br>')
            .replace(/<\/h2><br>/g, '</h2>')
            .replace(/<\/h3><br>/g, '</h3>')
            .replace(/<hr[^>]*><br>/g, '<hr style="border: 1px solid rgba(255,255,255,0.1); margin: 20px 0;">');
          
          resultContent.innerHTML = content;
          timestamp.textContent = `‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î: ${new Date(data.timestamp).toLocaleString('th-TH')}`;
        }
      } catch (error) {
        resultContent.innerHTML = `<div class="placeholder">
          <div class="icon">‚ùå</div>
          <p>‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ${error.message}</p>
