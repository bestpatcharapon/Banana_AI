  <style>
    :root {
      --bg: #f5f5f5;
      --card: #ffffff;
      --text-primary: #1a1a1a;
      --text-secondary: #555;
      --text-muted: #888;
      --border: #e0e0e0;
      --accent: #fef3c7;
      --accent-dark: #fcd34d;
      --shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'IBM Plex Sans Thai', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--bg);
      min-height: 100vh;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .main-card {
      background: var(--card);
      border-radius: 24px;
      box-shadow: var(--shadow);
      width: 100%;
      max-width: 480px;
      overflow: hidden;
    }

    /* Header */
    .header {
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      padding: 32px 24px;
      text-align: center;
      border-bottom: 1px solid var(--accent-dark);
    }

    .header h1 {
      font-size: 1.5rem;
      font-weight: 600;
      color: #78350f;
      margin-bottom: 4px;
    }

    .header p {
      color: #92400e;
      font-size: 0.85rem;
      font-weight: 400;
    }

    /* User Section */
    .user-section {
      padding: 20px 24px;
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .user-avatar {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: var(--accent);
      border: 2px solid var(--accent-dark);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1rem;
      font-weight: 600;
      color: #78350f;
      flex-shrink: 0;
    }

    .user-info {
      flex: 1;
      min-width: 0;
    }

    .user-info h3 {
      font-size: 0.95rem;
      font-weight: 500;
      color: var(--text-primary);
      margin-bottom: 2px;
    }

    .user-info p {
      color: var(--text-muted);
      font-size: 0.8rem;
      font-weight: 300;
    }

    .logout-btn {
      background: transparent;
      color: var(--text-muted);
      border: 1px solid var(--border);
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.75rem;
      font-weight: 400;
      transition: all 0.2s ease;
      font-family: inherit;
    }

    .logout-btn:hover {
      background: #fef2f2;
      color: #dc2626;
      border-color: #fca5a5;
    }

    /* Actions Section */
    .actions-section {
      padding: 20px 24px;
      border-bottom: 1px solid var(--border);
    }

    .login-btn {
      background: var(--card);
      color: var(--text-primary);
      border: 1px solid var(--border);
      padding: 12px 20px;
      font-size: 0.9rem;
      font-weight: 400;
      border-radius: 10px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      width: 100%;
      transition: all 0.2s ease;
      font-family: inherit;
    }

    .login-btn:hover {
      background: #f9fafb;
      border-color: #ccc;
    }

    .login-btn svg {
      width: 18px;
      height: 18px;
    }

    .action-button {
      background: var(--text-primary);
      color: white;
      border: none;
      padding: 14px 20px;
      font-size: 0.9rem;
      font-weight: 500;
      border-radius: 10px;
      cursor: pointer;
      width: 100%;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      font-family: inherit;
    }

    .action-button:hover {
      background: #333;
    }

    .action-button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .action-button .spinner {
      width: 16px;
      height: 16px;
      border: 2px solid rgba(255,255,255,0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      display: none;
    }

    .action-button.loading .spinner {
      display: block;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Result Section */
    .result-section {
      padding: 20px 24px;
      min-height: 200px;
    }

    .result-label {
      font-size: 0.75rem;
      font-weight: 500;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 12px;
    }

    .result-content {
      line-height: 1.7;
      color: var(--text-primary);
      font-size: 0.9rem;
    }

    .result-content h2, .result-content h3 {
      color: var(--text-primary);
      margin: 16px 0 8px;
      font-weight: 500;
      font-size: 1rem;
    }

    .result-content strong {
      color: var(--text-primary);
      font-weight: 600;
    }

    .placeholder {
      text-align: center;
      color: var(--text-muted);
      padding: 40px 20px;
    }

    .placeholder .icon {
      font-size: 2.5rem;
      margin-bottom: 12px;
      opacity: 0.5;
    }

    .placeholder p {
      font-weight: 300;
      font-size: 0.9rem;
    }

    .timestamp {
      text-align: right;
      color: var(--text-muted);
      font-size: 0.7rem;
      margin-top: 16px;
      font-weight: 300;
    }

  </style>
</head>
