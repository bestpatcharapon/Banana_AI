{
  "appId": "com.banana.ai-assistant",
  "productName": "Banana AI Assistant",
  "copyright": "Copyright Â© 2026 Banana AI",
  "directories": {
    "output": "release",
    "buildResources": "electron/assets"
  },
  "files": [
    "dist/frontend/browser/**/*",
    "electron/**/*",
    "!electron/assets/*.md"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/assets/icon.png",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Banana AI"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "electron/assets/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "electron/assets",
    "category": "Utility",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": null
}
